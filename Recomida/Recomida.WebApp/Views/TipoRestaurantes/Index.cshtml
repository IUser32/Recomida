@model IEnumerable<Recomida.WebApp.Models.Context.TipoRestaurante>
@{
    ViewBag.Title = "Tipos de Restaurante";
}
<section class="content-header">
    <h2>Tipos de Restaurante @Html.ActionLink("Crear Nuevo", "Create", null, new { @class = "btn bg-olive" })</h2>


</section>
<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">Gestión de Tipos de Restaurante</h3>
            </div>
            <div class="box-body">
                <table class="table table-bordered">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Descripcion)
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Descripcion)
                            </td>
                            <td>
                                @Html.ActionLink("  |  ", "Edit", new { id = item.TipoRestauranteID }, new { @class = "fa fa-pencil" })
                                @Html.ActionLink("  |  ", "Details", new { id = item.TipoRestauranteID }, new { @class = "fa fa-info" })
                                @Html.ActionLink("  . ", "Delete", new { id = item.TipoRestauranteID }, new { @class = "fa fa-trash" })
                            </td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>
    </div>
